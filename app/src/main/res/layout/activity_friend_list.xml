<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/friend_list_bg"
    tools:context="com.xpple.fruits.orchard.ui.FriendListActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:src="@mipmap/icon_back_white"
            android:background="@color/transpant"/>

        <TextView
            android:layout_width="150dp"
            android:layout_height="65dp"
            android:layout_marginTop="10dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:background="@mipmap/friend_list_clound"
            android:textSize="@dimen/content_titlesize"
            android:textColor="@color/base_color_text_gray"
            android:text="好友列表"/>

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="fitCenter"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/transpant"
            android:src="@mipmap/friend_list_add"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    </android.support.v7.widget.RecyclerView>

</LinearLayout>
