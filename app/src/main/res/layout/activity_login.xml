<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/base_color_text_white"
    tools:context="com.xpple.fruits.me.ui.LoginActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center">
        <ImageView
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:background="@mipmap/logo"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:background="@mipmap/login_edit"
            android:orientation="horizontal"
            android:gravity="center_vertical">

             <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/telnumber"/>

            <com.xpple.fruits.view.DeletableEditText
                android:id="@+id/et_login_tel"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:singleLine="true"
                android:paddingLeft="20dp"
                android:drawableRight="@mipmap/login_delete"
                android:hint="用户名/手机号"
                android:background="@color/transpant"
                android:maxLength="16"
                android:textSize="@dimen/textSize_editText" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:background="@mipmap/login_edit"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/password"/>
            <com.xpple.fruits.view.DeletableEditText
                android:id="@+id/et_login_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:singleLine="true"
                android:background="@color/transpant"
                android:layout_centerVertical="true"
                android:paddingLeft="20dp"
                android:drawableRight="@mipmap/login_delete"
                android:inputType="textPassword"
                android:hint="密码"
                android:maxLength="16"
                android:textSize="@dimen/textSize_editText"/>

        </LinearLayout>
        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/tv_login_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textSize="16sp"
                android:textColor="@color/color_text_blue"
                android:text="还没有账号？注册>>"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <Button
                android:id="@+id/btn_login_account"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/btn_brown_big_style"
                android:layout_centerInParent="true"
                android:textStyle="bold"
                android:textColor="@color/base_color_text_white"
                android:textSize="@dimen/textSize_btn"
                android:text="登录"/>
            <TextView
                android:id="@+id/tv_login_update_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:textSize="18sp"
                android:text="忘记密码不要方！点我！"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
