<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/base_color_text_white"
        android:orientation="vertical"
        tools:context=".me.ui.RegisterActivity">
        <include layout="@layout/actionbar"/>
    
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:paddingBottom="20dp"
            android:paddingTop="20dp"
            android:orientation="vertical"
            android:background="@mipmap/edit_background">
    
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">
    
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@mipmap/nickname"/>
    
                <com.xpple.fruits.view.DeletableEditText
                    android:id="@+id/et_register_username"
                    android:maxLines="1"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:paddingLeft="10dp"
                    android:hint="请输入用户名"
                    android:textColorHint="#bebebe"
                    android:drawableRight="@mipmap/login_delete"
                    android:background="@color/transpant"
                    android:maxLength="16"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/viewColor"/>
    
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical">
    
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/telnumber"/>
    
                <com.xpple.fruits.view.DeletableEditText
                    android:id="@+id/et_register_phone"
                    android:maxLines="1"
                    android:background="@color/transpant"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:paddingLeft="10dp"
                    android:hint="请输入手机号"
                    android:textColorHint="#bebebe"
                    android:maxLength="11"
                    android:inputType="phone"
                    android:drawableRight="@mipmap/login_delete"/>
    
            </LinearLayout>
    
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/viewColor"/>
    
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical">
    
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@mipmap/security_code"/>
    
                <com.xpple.fruits.view.DeletableEditText
                    android:id="@+id/et_register_code"
                    android:layout_width="150dp"
                    android:layout_height="48dp"
                    android:maxLines="1"
                    android:layout_centerVertical="true"
                    android:background="@color/transpant"
                    android:paddingLeft="10dp"
                    android:hint="请输入验证码"
                    android:textColorHint="#bebebe"
                    android:maxLength="6"
                    android:inputType="number"/>
    
                <Button
                    android:id="@+id/btn_register_code"
                    android:text="发送验证码"
                    android:layout_width="110dp"
                    android:layout_height="35dp"
                    android:background="@drawable/btn_brown_style" />
            </LinearLayout>
    
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">
    
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@mipmap/password"/>
    
                <com.xpple.fruits.view.DeletableEditText
                    android:id="@+id/et_register_password"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:maxLines="1"
                    android:paddingLeft="10dp"
                    android:hint="请输入密码"
                    android:background="@color/transpant"
                    android:textColorHint="#bebebe"
                    android:drawableRight="@mipmap/login_delete"
                    android:inputType="textPassword"
                    android:maxLength="16"/>
            </LinearLayout>
    
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical">
    
                <ImageView
                    android:id="@+id/address_home"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@mipmap/invite_code" />
    
                <com.xpple.fruits.view.DeletableEditText
                    android:id="@+id/et_register_invite_code"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:maxLines="1"
                    android:background="@color/transpant"
                    android:paddingLeft="10dp"
                    android:hint="请输入邀请人手机号(选填)"
                    android:textColorHint="#bebebe"
                    android:drawableRight="@mipmap/login_delete"
                    android:maxLength="16"/>
    
            </LinearLayout>
    
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
    
            <Button
                android:id="@+id/btn_register_confirm"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                android:background="@drawable/btn_brown_big_style"
                android:layout_centerInParent="true"
                android:textStyle="bold"
                android:textColor="@color/base_color_text_white"
                android:textSize="@dimen/textSize_btn"
                android:text="注册"/>
    
        </LinearLayout>
    
    </LinearLayout>
