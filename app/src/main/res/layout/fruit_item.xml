<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_marginTop="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@color/base_color_text_white">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_fruit_pic"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/seeds_banana2"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">

            <TextView
                android:id="@+id/tv_fruit_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize_textView"
                android:text="香蕉"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="bottom">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textSize_textView"
                    android:text="单价："/>

                <TextView
                    android:id="@+id/tv_fruit_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textSize_textView"
                    android:textColor="@color/base_color_red"
                    android:text="1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textSize_textView"
                    android:textColor="@color/base_color_red"
                    android:text="元/"/>

                <TextView
                    android:id="@+id/tv_fruit_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textSize_textView"
                    android:textColor="@color/base_color_red"
                    android:text="个"/>

                <LinearLayout
                    android:id="@+id/ll_original"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/textSize_textView"
                        android:textColor="@color/base_color_text_gray"
                        android:text="("/>

                    <TextView
                        android:id="@+id/tv_fruit_original_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/textSize_textView"
                        android:textColor="@color/base_color_text_gray"
                        android:text="1.5"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/textSize_textView"
                        android:textColor="@color/base_color_text_gray"
                        android:text="元/"/>

                    <TextView
                        android:id="@+id/tv_fruit_original_unit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/textSize_textView"
                        android:textColor="@color/base_color_text_gray"
                        android:text="个"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/textSize_textView"
                        android:textColor="@color/base_color_text_gray"
                        android:text=")"/>

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="bottom|right">

            <ImageButton
                android:id="@+id/ib_fruit_sub"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginRight="10dp"
                android:background="@mipmap/payinget_jian"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/tv_fruit_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="1dp"
                android:textColor="@color/content"
                android:visibility="gone"/>

            <ImageButton
                android:id="@+id/ib_fruit_add"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@mipmap/payinget_add"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>