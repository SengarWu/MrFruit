<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_marginTop="@dimen/dp_10"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@color/base_color_text_white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/iv_seed_picture"
                android:layout_width="80dp"
                android:layout_height="80dp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:orientation="vertical"
            android:layout_marginLeft="5dp">

            <TextView
                android:id="@+id/tv_seed_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize_textView"
                android:text="香蕉种子"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="bottom">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textSize_textView"
                    android:text="单价："/>

                <TextView
                    android:id="@+id/tv_seed_coin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textSize_textView"
                    android:textColor="@color/color_text_brown"
                    android:text="1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textSize_textView"
                    android:textColor="@color/color_text_brown"
                    android:text="Get币"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textSize_textView"
                    android:textColor="@color/color_text_blue"
                    android:text="("/>

                <TextView
                    android:id="@+id/tv_seed_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textSize_textView"
                    android:textColor="@color/color_text_blue"
                    android:text="0.1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textSize_textView"
                    android:textColor="@color/color_text_blue"
                    android:text="元/个)"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right">

            <TextView
                android:id="@+id/tv_seed_state"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:background="@mipmap/seed_free"
                android:textSize="@dimen/textSize_textView"
                android:textColor="@color/base_color_text_white"
                android:gravity="center"
                android:text="免费"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>